// METHOD 1 - by array (me)
#include <stdio.h>

int main() {
    int n,a,b=0,c,i,j;
    printf("enter\n");
    scanf("%d",&n);
    a=2*n-1;
    c=a-1;
    int d[a][a];
    while(n!=0){
        for(i=b;i<=c;i++){
            for(j=b;j<=c;j++){
                if(i==b||i==c||j==b||j==c){
                    d[i][j]=n;
                }
            }
        }
        b++;
        c--;
        n--;
    }
    for(i=0;i<a;i++){
        for(j=0;j<a;j++){
            printf("%d\t",d[i][j]);
        }
        printf("\n");
    }

    return 0;
}




// METHOD 2 - (tushar bhaiya)



// Online C compiler to run C program online
#include <stdio.h>

int main() {
    int n,a,i,j,min;
    scanf("%d",&n);
    a=2*n-1;
    
    for(i=0;i<a;i++){
        for(j=0;j<a;j++){
            if(i<=j){
                min=i;
            }
            else {
                min=j;
            }
            if(min<=a-i){
                min=min;
            }
            else {
                min=a-i-1;
            }
            if(min<=a-j-1){
                min=min;
            }
            else {
                min=a-j-1;
            }
            printf("%d\t",n-min);
        }
        printf("\n");
    }
   
    return 0;
}



//  METHOD 3 - Without using array (me)


#include <stdio.h>


int main() 
{
    int n;
    scanf("%d", &n);
    
    for(int i = n; i >= 1; i--){
        for(int j = n; j > i; j--)
            printf("%d ", j);
        for(int j = 1; j <= 2 * i - 1; j++)
            printf("%d ", i);
        for(int j = i + 1; j <= n; j++)
            printf("%d ", j);
        printf("\n");
    }
    
    for(int i = 1; i < n; i++){
        for(int j = n; j > i; j--)
            printf("%d ", j);
        for(int j = 1; j <= 2 * i - 1; j++)
            printf("%d ", i + 1);
        for(int j = i + 1; j <= n; j++)
            printf("%d ", j);
        printf("\n");
    }
    
    return 0;
}
