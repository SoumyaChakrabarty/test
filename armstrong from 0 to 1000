#include <stdio.h>
#include <math.h>

int isArmstrong(int num) {
    int originalNum, remainder, digits = 0, result = 0;

    originalNum = num;

    // Count the number of digits
    while (originalNum != 0) {
        originalNum /= 10;
        digits++;
    }

    originalNum = num;

    // Calculate the result
    while (originalNum != 0) {
        remainder = originalNum % 10;
        result += pow(remainder, digits);
        originalNum /= 10;
    }

    // If the number is Armstrong, return 1; otherwise, return 0
    if (result == num)
        return 1;
    else
        return 0;
}

int main() {
    int num;

    printf("Armstrong numbers between 0 and 1000:\n");

    for (num = 0; num <= 1000; num++) {
        if (isArmstrong(num))
            printf("%d\n", num);
    }

    return 0;
}
